<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".controllers.fragment.InfoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/fragment_info__card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:layout_marginTop="@dimen/default_vertical_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:layout_marginBottom="@dimen/default_half_vertical_margin"

            app:layout_constraintBottom_toTopOf="@id/fragment_info__card2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_horizontal_margin"
                android:textSize="@dimen/default_text_size"
                android:text="@string/info_graph_text" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_info__card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:layout_marginTop="@dimen/default_half_vertical_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:layout_marginBottom="@dimen/default_vertical_margin"

            app:layout_constraintBottom_toTopOf="@id/fragment_info__card3"
            app:layout_constraintTop_toBottomOf="@id/fragment_info__card1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_horizontal_margin"
                android:textSize="@dimen/default_text_size"

                android:text="@string/info_integral_text" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_info__card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:layout_marginTop="@dimen/default_half_vertical_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:layout_marginBottom="@dimen/default_vertical_margin"

            app:layout_constraintBottom_toTopOf="@id/fragment_info__card4"
            app:layout_constraintTop_toBottomOf="@id/fragment_info__card2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_horizontal_margin"
                android:textSize="@dimen/default_text_size"

                android:text="@string/info_functions_text" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_info__card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:layout_marginTop="@dimen/default_half_vertical_margin"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:layout_marginBottom="@dimen/default_vertical_margin"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_info__card3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_horizontal_margin"
                android:textSize="@dimen/default_text_size"

                android:text="@string/info_constants_text" />

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</ScrollView>